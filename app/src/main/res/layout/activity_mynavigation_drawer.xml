<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drwable_layout"
    tools:openDrawer="start"
    android:layout_height="match_parent"
    tools:context=".navigation_drawer.mynavigation_drawer">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/toolbar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subjects"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:id="@+id/subjec"
            android:textColor="@color/black"

            />

        <ImageView
            android:id="@+id/imv1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/subjec"
            android:layout_marginTop="40dp"
            android:src="@drawable/subj1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imv2"
            android:layout_below="@id/imv1"
            android:layout_marginTop="40dp"
            android:src="@drawable/sub2" />



    </RelativeLayout>

    <include
        layout="@layout/navigation_layout"
        />





</androidx.drawerlayout.widget.DrawerLayout>